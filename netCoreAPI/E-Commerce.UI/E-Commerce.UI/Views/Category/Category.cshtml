@model Ecommerce.Shared.Domain.CategoryDomain

@{
    ViewData["Title"] = "Category";
}

<h1>Category</h1>

<hr />
<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <input type="hidden" id="hdnCatID" />
        <label>Category Name</label>
        <input type="text" id="txtCatName" class="form-control" />
    </div>
    <div class="col-4"></div>
</div>
<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <label>Category Status</label>
        <select id="ddlCatStatus" class="form-control">
            <option value="1">Active</option>
            <option value="0">In-Active</option>
        </select>
    </div>
    <div class="col-4"></div>
</div>
<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <input type="submit" onclick="AddCategory();" id="btnSubmit" class="btn btn-success" />
    </div>
    <div class="col-4"></div>
</div>

<partial name="_CatList" />


<script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
<script src="~/Scripts/category.js" type="text/javascript"></script>

