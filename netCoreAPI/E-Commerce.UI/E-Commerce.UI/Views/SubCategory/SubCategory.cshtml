@model Ecommerce.Shared.Domain.SubCategoryDomain

@{
    ViewData["Title"] = "SubCategory";
    Layout = "~/Views/Shared/AdminTemplate.cshtml";
}


  
<!-- Modal -->
<div class="modal fade" id="MyModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header" style= "background-color:ActiveCaption">
        <h5 class="modal-title" id="exampleModalLabel">SubCategoryForm</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form method="post">
            <input type="hidden" id="hdnSubCatID" /> 
            <div class=row>
            <label>Category</label>
            <div class="col-md-12">
                <div class="CategoryDetails"></div>
            </div>
            <label>SubCategory</label>
            <div class="col-md-12">
                <input type="text" placeholder="Enter SubCategory here......." id="txt_SubCatName" class="form-control" />
            </div> 
            <label>Status</label>
            <div class="col-md-12">
             <select id="ddl_Status" class="form-control">
            <option value="-1">--- Select Status ---</option>
            <option value="1">Active</option>
            <option value="0">In-Active</option>
        </select>
            </div> 
      
        </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" onclick="SubmitData()" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <partial name="SubCategoryDetails" />
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
<script src="~/Scripts/subCategory.js" type="text/javascript"></script>


