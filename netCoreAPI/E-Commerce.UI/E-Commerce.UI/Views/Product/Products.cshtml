@model Ecommerce.Shared.Models.ProductModel

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/AdminTemplate.cshtml";
}
<div class="modal fade" id="MyModal" tabindex="-1" role="dialog" 
aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:ActiveCaption">
                <h5 class="modal-title" id="exampleModalLabel">ProductForm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
                      
            <div class="modal-body">
                
                    <input type="hidden" id="hdnProductID" />
                    <input type="hidden" id="hdnMainImage" />
                    <input type="hidden" id="hdnOtherImages" />
                    <div class=row>
                        <label>Category</label>
                        <div class="col-md-12">
                            <div class="CategoryDetails"></div>
                        </div>
                        <label>Sub Category</label>
                        <div class="col-md-12">
                            <div class="SubCategoryDetails"></div>
                        </div>
                        <label>Company</label>
                        <div class="col-md-12">
                            <div class="CompanyDetails"></div>
                        </div>
                        <label>Brand</label>
                        <div class="col-md-12">
                            <div class="BrandDetails"></div>
                        </div>
                        <label>Product</label>
                        <div class="col-md-12">
                            <input type="text" placeholder="Enter Product here......."
                                   id="txt_ProductName" class="form-control" />
                        </div>
                        <label>Main Image</label>
                        <div class="col-md-12">
                            <input type="file" 
                                   id="txt_MainImage" class="form-control" />
                        </div>
                        <label>Other Image</label>
                        <div class="col-md-12">
                            <input type="file" multiple 
                                   id="txt_OtherImage" class="form-control" />
                        </div>
                        
                        <label>Description</label>
                        <div class="col-md-12">
                            <input type="text" placeholder="Enter Product here......."
                                   id="txt_Description" class="form-control" />
                        </div>
                        <label>Price</label>
                        <div class="col-md-12">
                            <input type="number" placeholder="Enter Product here......."
                                   id="txt_Price" class="form-control" />
                        </div>
                        <label>Status</label>
                        <div class="col-md-12">
                            <select id="ddl_Status" class="form-control">
                                <option value="-1">--- Select Status ---</option>
                                <option value="1">Active</option>
                                <option value="0">In-Active</option>
                            </select>
                        </div>

                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button onclick="SubmitData();" class="btn btn-primary">Submit</button>
            </div>
            
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <partial name="_ProductDetails" />
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
<script src="~/Scripts/product.js" type="text/javascript"></script>

