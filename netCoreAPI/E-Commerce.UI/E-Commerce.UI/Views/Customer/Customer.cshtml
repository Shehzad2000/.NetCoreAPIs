@{
    ViewData["Title"] = "Customer";
    Layout = "~/Views/Shared/AdminTemplate.cshtml";
}



<div class="container m-t-5">
    <form method="post">
    <input type="hidden" id="hdnCustomerID" />
    <input type="hidden" id="hdnImage" />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Name:</label>
                <input type="text" placeholder="Enter CustomerContact here......."
                       id="txt_CustomerName" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Email:</label>
                <input type="text" placeholder="Enter CustomerContact here......."
                       id="txt_CustomerEmail" class="form-control" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Contact:</label>
                <input type="text" placeholder="Enter CustomerContact here......."
                       id="txt_CustomerContact" class="form-control" />
            </div>
        </div>
        <div class=col-md-6>
            <div class="form-group">
                <label>Address</label>
                <textarea id="txt_CustomerAddress" name="Adress"
                          rows="5" cols="33" placeholder="Enter address here">
                </textarea>
            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" onclick="SubmitData()" value="Create" class="btn btn-primary" />
    </div>
</form>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>
<script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
<script src="~/Scripts/Customer.js" type="text/javascript"></script>

