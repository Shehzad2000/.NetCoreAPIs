<div class="container">
    <form class="form-horizontal" >
  <div class="form-group">
    <label class="control-label col-sm-2" for="email">Name:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="txt_UserName" placeholder="Enter Name here.....">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="pwd">Email:</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" id="txt_UserEmail" placeholder="Enter Email here.....">
    </div>
  </div>
    <div class="form-group">
    <label class="control-label col-sm-2" for="email">Contact:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="txt_UserContact" placeholder="Enter Name here.....">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label " for="pwd">Gender:</label>
     <label class="radio-inline">
      <input type="radio" name="txt_Gender" checked>Male
    </label>
    <label class="radio-inline">
      <input type="radio" name="txt_Gender">Female
    </label>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="email">Image:</label>
    <div class="col-sm-10">
      <input type="file" class="form-control" id="Image">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="pwd">CNIC:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="UserCNIC" placeholder="Enter CNIC here.....">
    </div>
  </div>
    <div class="form-group">
    <label class="control-label col-sm-2" for="email">Address:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="UserAddress" multiple placeholder="Enter Adress here.....">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="pwd">Status:</label>
    <div class="col-sm-10">
             <select id="ddl_Status" class="form-control">
            <option value="-1">--- Select Status ---</option>
            <option value="1">Active</option>
            <option value="0">In-Active</option>
        </select>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label><input type="checkbox"> Remember me</label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" onclick="SubmitData();" class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>
</div>
